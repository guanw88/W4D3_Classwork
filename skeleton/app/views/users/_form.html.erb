<% action = users_url %>
<% method = :post %>

<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">

  <label for="user_name">User Name</label>
  <input
    type="text"
    name="user[user_name]"
    id="user_name"
    value="">

  <label for="password">Password</label>
  <input
    type="text"
    name="user[password]"
    id="password"
    value="">
  <br>

  <% submit_text = 'Create User' %>
  <input type="submit" value="<%= submit_text %>">
</form>
